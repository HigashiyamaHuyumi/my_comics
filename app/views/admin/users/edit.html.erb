<div class="container">
  <div class="row center">
    <div class="col-md-12">
      
      <div class="text-center">
        <h3><span style="background-color: #eaedf7;"><%= @user.nickname %>さんの会員情報編集</span></h3>
        <%= form_for @user, url: admin_user_path(@user), method: :patch do |f| %>
  
          <%= render 'layouts/user_errors', user: @user %>
  
          <div class="field">
            <p>会員ID:<%= @user.id %></p>
          </div>
  
          <div class="field">
            <%= f.label :ニックネーム, class: "col-lg-2" %>
            <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
          </div>
  
          <div class="field">
            <%= f.label :メールアドレス, class: "col-lg-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
  
          <div class="form-group">
            <%= f.label :is_active, "会員ステータス" %><br>
            <label class="btn btn <%= 'active' if @user.is_active? %>" <%= @user.is_active? ? 'black' : 'transparent' %>">
              <%= f.radio_button :is_active, true, class: 'form-check-input' %> 有効
            </label>
            <label class="btn btn <%= 'active' unless @user.is_active? %>" <%= @user.is_active? ? 'transparent' : 'black' %>">
              <%= f.radio_button :is_active, false, class: 'form-check-input' %> 退会
            </label>
          </div>
  
          <div class="row justify-content-center">
            <div class="col-md-8">
              <%= f.submit "変更を保存", class: "btn btn-success" %>
            </div>
          </div>
        <% end %>
      </div>
      
    </div>
  </div>
</div>

<%= render 'layouts/footer' %>