<div class="container">
  <h5><span style="background-color: #eaedf7;"><%= @user.nickname %>さんの会員情報編集</span></h5>

  <div class="row">
    <div class="col-md-8">

    <%= form_for @user, url: admin_user_path(@user), method: :patch do |f| %>

      <!-- エラーチェック -->
      <% if @user.errors.any? %>
        <%= @user.errors.count %> errors prohibited this obj from being saved:
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>

      <div>会員ID <%= @user.id %></div>

      <div class="field">
        <%= f.label :ニックネーム %>
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :is_active, "会員ステータス" %><br>
        <label class="btn btn <%= 'active' if @user.is_active? %>" <%= @user.is_active? ? 'black' : 'transparent' %>">
          <%= f.radio_button :is_active, true, class: 'form-check-input' %> 有効
        </label>
        <label class="btn btn <%= 'active' unless @user.is_active? %>" <%= @user.is_active? ? 'transparent' : 'black' %>">
          <%= f.radio_button :is_active, false, class: 'form-check-input' %> 退会
        </label>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= f.submit "変更を保存" ,class: "btn btn-success" %>
    </div>
  </div>

    <% end %>

</div>