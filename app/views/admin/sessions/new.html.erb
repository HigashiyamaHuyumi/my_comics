<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h5><span style="background-color: #eaedf7;">管理者ログイン</span></h5>
      <%= current_admin %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_for(:admin, url: admin_session_path) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス, class: "col-lg-4" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-3" %>
        </div>
        <div class="field">
          <%= f.label :パスワード, class: "col-lg-4" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "col-lg-3" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "ログイン", class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render 'layouts/footer' %>