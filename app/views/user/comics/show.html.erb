<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1><%= @comic.title %></h1>
      <p class="width-matched">タイトル頭文字: <%= @comic.initial %></p>
      <p class="width-matched">著者: <%= @comic.author %></p>
      <p class="width-matched">出版社: <%= @comic.publisherName %></p>
      <p class="width-matched">連載状況:
        <% if @comic.situation == "serialization" %>
          <%= "連載中" %>
        <% elsif @comic.situation == "completed" %>
          <%= "完結" %>
        <% elsif @comic.situation == "suspended" %>
          <%= "休載中" %>
        <% end %>
      </p>
      <p class="width-matched">媒体:
        <% if @comic.medium == "paper" %>
          <%= "紙" %>
        <% elsif @comic.medium == "e_book" %>
          <%= "電子書籍" %>
        <% end %>
      </p>
      <p class="width-matched">形式:
        <% if @comic.story == "hardcover" %>
          <%= "単行本" %>
        <% elsif @comic.story == "separate_volumes" %>
          <%= "分冊本" %>
        <% elsif @comic.story == "single_story" %>
          <%= "単話" %>
        <% end %>
      </p>
      <p class="width-matched">
        所持巻数:<%= @comic.volumes.sort_by { |volume| volume.name }.pluck(:name).join(', ') %>
      </p>
      <p class="width-matched">タグ: <%= @comic.tags.join(', ') %></p>
      <p class="width-matched">漫画のサイズ: <%= @comic.comic_size %></p>
      <p class="width-matched">備考欄: <%= @comic.remarks %></p>

      <%= link_to '編集', edit_comic_path(@comic), class: 'btn btn-primary' %>
      <%= link_to '削除', comic_path(@comic), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
      <%= link_to '一覧に戻る', my_page_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>