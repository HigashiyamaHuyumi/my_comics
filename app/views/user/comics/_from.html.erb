<% if comic.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(comic.errors.count, "error") %> prohibited this comic from being saved:</h2>

    <ul>
      <% comic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: comic do |f| %>
  <h4>タイトル</h4>
  <%= f.text_area :title, class: 'form-control' %>

  <h4>著者</h4>
  <%= f.text_field :author, class: 'form-control' %>


  <h4>出版社</h4>
  <%= f.text_field :publisher, class: 'form-control' %>

  <h4>タグ</h4>
  <%= f.collection_check_boxes(:tag_ids, @tags, :id, :name) %>
  
  <h4>新しいタグ</h4>
  <%= f.text_field :new_tag, class: 'form-control' %>

  <div class="actions">
    <%= f.submit '保存', class: 'btn btn-primary' %>
  </div>
<% end %>