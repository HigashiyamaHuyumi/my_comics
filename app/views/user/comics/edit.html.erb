<div class="container">
  <h5><span style="background-color: #dcdcdc;">漫画情報編集</span></h5>

  <div class="row justify-content-center">
    <div class="col-md-6">

    <%= render 'layouts/comics_errors' , comics: @comics  %>

  　<%= form_with model: @comics,url: comic_path(@comics), method: :patch do |f| %>

      <%= f.label :"タイトル" %>
      <%= f.text_field :title %>
      <br>

      <%= f.label :"著者" %>
      <%= f.text_field :author %>
      <br>

    </div>
  </div>

  <div class="row justify-content-center">
    <%= f.submit '変更を保存' ,class: "btn btn-success" %>
  </div>

    <% end %>

</div>
