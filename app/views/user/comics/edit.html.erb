<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1>漫画情報を編集</h1>

      <%= render 'error', comic: @comic %>

      <%= form_with model: @comic do |f| %>
        <h4>タイトル</h4>
        <%= f.text_area :title, class: 'form-control' %>

        <h4>著者</h4>
        <%= f.text_field :author, class: 'form-control' %>

        <h4>出版社</h4>
        <%= f.text_field :publisher, class: 'form-control' %>

        <h4>タグ</h4>
        <%= f.collection_check_boxes(:tag_ids, @tags, :id, :name) %>

        <h4>新しいタグ</h4>
        <%= f.text_field :new_tag, class: 'form-control', placeholder: 'タグ1, タグ2, ...' %>

        <div class="actions">
          <%= f.submit '保存', class: 'btn btn-primary' %>
        </div>
      <% end %>

    </div>
  </div>
</div>