<div class="container">
  <div class="row">
    <div class="col-md-4">
    <h1>漫画情報を編集</h1>

    <%= render 'layouts/comics_errors', comic: @comic %>

    <%= form_with model: @comic do |f| %>
      <h4 style="text-decoration: underline;">タイトル(必須)</h4>
      <%= f.text_area :title, required: true %>

      <h4 style="text-decoration: underline;">著者(必須)</h4>
      <%= f.text_field :author, required: true %>

      <h4 style="text-decoration: underline;">出版社(必須)</h4>
      <%= f.text_field :publisherName, required: true %>

    </div>
    <div class="col-md-8">
      
      <h4 style="text-decoration: underline;">形式</h4>
      <div>
        <%= f.radio_button :story, "hardcover", id: :story_hardcovear %>
        <%= f.label :story_hardcover, "単行本" %>

        <%= f.radio_button :story, "separate_volumes", id: :story_separate_volumes %>
        <%= f.label :story_separate_volumes, "分冊版" %>

        <%= f.radio_button :story, "single_story", id: :story_single_story %>
        <%= f.label :story_single_story, "単話" %>
      </div>

      <h4 style="text-decoration: underline;">巻数</h4>
      <%= f.collection_check_boxes(:volume_ids, Volume.all, :id, :name) %>

      <h4 style="text-decoration: underline;">新しい巻</h4>
      <%= f.text_field :new_volume, placeholder: '1, 2, ...' %>
      
      <h4 style="text-decoration: underline;">購入場所</h4>
      <div>
        <%= f.radio_button :purchase_place, "book_store", id: :purchase_place_book_store %>
        <%= f.label :purchase_place_book_store, "本屋" %>

        <%= f.radio_button :purchase_place, "e_book", id: :purchase_place_e_book %>
        <%= f.label :purchase_place_e_book, "電子書籍" %>

        <%= f.radio_button :purchase_place, "others", id: :purchase_place_others %>
        <%= f.label :purchase_place_others, "他" %>

        <%= f.text_field :purchase_place_custom, placeholder: '自由記入' %>
      </div>

      <h4 style="text-decoration: underline;">タグ</h4>
      <%= f.collection_check_boxes(:tag_ids, @tags, :id, :name) %>

      <h4 style="text-decoration: underline;">新しいタグ</h4>
      <%= f.text_field :new_tag, placeholder: 'タグ1, タグ2, ...' %>
      
      <h4 style="text-decoration: underline;">備考欄</h4>
      <%= f.text_field :remarks %>

    </div>
    
  </div>

    <div class="row center">
      <div class="col-md-6">
        <div class="actions">
          <%= f.submit '保存', class: 'btn btn-primary' %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>