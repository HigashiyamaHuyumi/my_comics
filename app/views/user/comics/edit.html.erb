<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h5 style="text-align: center;"><span style="background-color: #eaedf7;">漫画の編集</span></h5>

      <%= render 'layouts/comics_errors', comic: @comic %>

      <%= form_with model: @comic, url: comic_path(@comic), method: :patch do |f| %>
        <div class="field row">
          <%= f.label "タイトル(必須)", class: "col-lg-2" %>
          <%= f.text_field :initial, required: true, size: 2 , placeholder: '頭文字' %>
          <%= f.text_area :title, required: true, class: "col-lg-5" %>
        </div>

        <div class="field row">
          <%= f.label :著者, class: "col-lg-2" %>
          <%= f.text_field :author, class: "col-lg-5" %>
        </div>

        <div class="field row">
          <%= f.label :出版社, class: "col-lg-2" %>
          <%= f.text_field :publisherName, class: "col-lg-5" %>
        </div>

        <div class="field row">
          <%= f.label "連載状況", class: "col-lg-2" %>
          <div class="col-lg-5">
            <%= f.radio_button :situation, "serialization", id: :situation_serialization %>
            <%= f.label :situation_serialization, "連載中" %>

            <%= f.radio_button :situation, "completed", id: :situation_completed %>
            <%= f.label :situation_completed, "完結" %>

            <%= f.radio_button :situation, "suspended", id: :situation_suspended %>
            <%= f.label :situation_suspended, "休載中" %>
          </div>
        </div>

        <div class="field row">
          <%= f.label "媒体", class: "col-lg-2" %>
          <div class="col-lg-5">
            <%= f.radio_button :medium, "paper", id: :medium_paper %>
            <%= f.label :medium_paper, "紙" %>

            <%= f.radio_button :medium, "e_book", id: :medium_e_book %>
            <%= f.label :medium_e_book, "電子書籍" %>
          </div>
        </div>

        <div class="field row">
          <%= f.label "形式", class: "col-lg-2" %>
          <div class="col-lg-5">
            <%= f.radio_button :story, "hardcover", id: :story_hardcovear %>
            <%= f.label :story_hardcover, "単行本" %>

            <%= f.radio_button :story, "separate_volumes", id: :story_separate_volumes %>
            <%= f.label :story_separate_volumes, "分冊版" %>

            <%= f.radio_button :story, "single_story", id: :story_single_story %>
            <%= f.label :story_single_story, "単話" %>
          </div>
        </div>

        <div class="field row">
          <%= f.label :巻数, class: "col-lg-2" %>
          <div class="col-lg-5">
            <%= f.collection_check_boxes(:volume_ids, @volumes || [], :id, :name) %>
          </div>
        </div>

        <div class="field row">
          <%= f.label :新しい巻, class: "col-lg-2" %>
          <div class="col-lg-5">
            <%= f.text_field :new_volume, placeholder: '1, 2, ...' %>
          </div>
        </div>

        <div class="field row">
          <%= f.label :タグ, class: "col-lg-2" %>
          <div class="col-lg-5">
            <%= f.collection_check_boxes(:tag_ids, @tags  || [], :id, :name) %>
          </div>
        </div>

        <div class="field row">
          <%= f.label :新しいタグ, class: "col-lg-2" %>
          <div class="col-lg-5">
            <%= f.text_field :new_tag, placeholder: 'タグ1, タグ2, ...' %>
          </div>
        </div>

        <div class="field row">
          <%= f.label :漫画のサイズ, class: "col-lg-2" %>
          <%= f.text_field :comic_size, class: "col-lg-5" %>
        </div>

        <div class="field row">
          <%= f.label :備考欄, class: "col-lg-2" %>
          <%= f.text_field :remarks, class: "col-lg-5" %>
        </div>

        <div class="text-center">
          <div class="actions">
            <%= f.submit '保存', class: 'btn btn-primary', style: 'margin: 1rem;' %>
          </div>
        </div>

  　　  <% end %>

    </div>
  </div>
</div>