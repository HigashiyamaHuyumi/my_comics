<div class="container">
  <h5><span style="background-color: #dcdcdc;">新規登録</span></h5>

  <div class="row justify-content-center">
    <div class="col-md-6">

    <%= render 'layouts/comics_errors' , comics: @comics  %>

    <%= form_with model: @comics,url: comics_path, method: :post, local: true, multipart: true do |f| %>


      <%= f.label :"タイトル" %>
      <%= f.text_field :title, required: true %>
      <br>

      <%= f.label :"著者" %>
      <%= f.text_field :author, required: true %>
      <br>

      <%= f.label :"ISBNコード" %>
      <%= f.text_field :isbn_code %>
      <br>

      <%= f.label :"出版社" %>
      <%= f.text_field :publisher %>
      <br>

      <%= f.label :"出版日" %>
      <%= f.text_field :ipublication_date %>
      <br>

      <%= f.label :"備考" %>
      <%= f.text_field :remarks %>
      <br>

    </div>
  </div>

  <div class="row justify-content-center">
    <%= f.submit'新規登録', class: "btn btn-success" %>
  </div>

    <% end %>

</div>

<%= render 'layouts/footer' %>