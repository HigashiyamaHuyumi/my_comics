<div class="container">
  <h5><span style="background-color: #dcdcdc;">新規登録</span></h5>

  <div class="row justify-content-center">
    <div class="col-md-6">

    <!-- エラーチェック -->
    <% if @comics.errors.any? %>
      <%= @comics.errors.count %> errors prohibited this item from being saved:
      <ul>
        <% @comics.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_with model: @comics,url: comics_path, method: :post, local: true, multipart: true do |f| %>


      <%= f.label :"タイトル" %>
      <%= f.text_field :title %>
      <br>

      <%= f.label :"著者" %>
      <%= f.text_area :author %>
      <br>

      <%= f.label :"ISBNコード" %>
      <%= f.text_field :isbn_code %>
      <br>

    </div>
  </div>

  <div class="row justify-content-center">
    <%= f.submit'新規登録', class: "btn btn-success" %>
  </div>

    <% end %>

</div>