<%= form_for(@bookshelf) do |f| %>
  <h4 style="text-decoration: underline;">タイトル(必須)</h4>
  <%= f.text_area :title, required: true %>

  <h4 style="text-decoration: underline;">著者(必須)</h4>
  <%= f.text_field :author, required: true %>

  <h4 style="text-decoration: underline;">出版社(必須)</h4>
  <%= f.text_field :publisherName, required: true %>

  <%= f.submit '更新', class: 'btn btn-primary' %>

<% end %>