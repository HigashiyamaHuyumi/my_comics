<div class="container">

  <div class="row">
    <div class="col-md-8">

    <h5><span style="background-color: #eaedf7;">会員の方はこちらからログイン</span></h5>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :メールアドレス, class: "col-lg-4" %>
        <%= f.email_field :email, autofocus: true, class: "col-lg-6" %>
      </div>

      <div class="field">
        <%= f.label :パスワード, class: "col-lg-4" %>
        <%= f.password_field :password, class: "col-lg-6" %>
      </div>

      <div class="text-center">
        <%= f.submit "ログイン" ,class: "btn btn-info" %>
      </div>
    <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <h5><span style="background-color: #eaedf7;">会員登録がお済みではない方</span></h5>
      <span><%= link_to "こちら", new_user_registration_path, style: "text-decoration: underline;" %>から会員登録を行ってください。</span>
    </div>
  </div>

</div>
