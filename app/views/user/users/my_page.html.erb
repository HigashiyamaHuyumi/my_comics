<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= link_to "#{current_user.nickname}の本棚" , user_path(@user) %>
      <table class="table">

        <%= link_to "タイトル順", my_page_path(order: 'title') %>
        <%= link_to "作者順", my_page_path(order: 'author') %>

        <thead>
          <tr>
            <th>タイトル</th>
            <th>著者</th>
            <th>出版社</th>
            <th>所持巻数</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>


          <% if @comics.present? %>
            <% @comics.each do |comic| %>
              <tr>
                <td><%= link_to comic.title, comic_path(comic) %></td>
                <td><%= comic.author %></td>
                <td><%= comic.publisherName %></td>
                <td><%= comic.volumes.join(', ') %></td>
                <td>
          
                  <%= link_to '編集', edit_comic_path(comic), class: 'btn btn-primary' %>
    
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="4">データがありません。</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<%= render 'layouts/footer' %>