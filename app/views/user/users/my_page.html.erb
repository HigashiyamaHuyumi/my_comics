<div class="container">
  <div class="row">
    <h5><span style="background-color: #dcdcdc;">登録情報</span></h5>
    <%= link_to "編集する", infomation_path, class: "btn btn-success" %>
  </div>

  <div class="row">
    <div class="col-md-6">
      <table class="table">
        <% if @user.present? %>
          <tr>
            <th>ニックネーム</th>
            <td><%= @user.nickname %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
        <% end %>
      </table>

    </div>
  </div>

</div>

<%= render 'layouts/footer' %>