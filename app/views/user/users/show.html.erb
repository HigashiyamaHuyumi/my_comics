<div class="container">
  <div class="row">
    <div class="col-md-6">
      
      <table class="table">
        <% if @user.present? %>
          <tr>
            <th>ニックネーム</th>
            <td><%= @user.nickname %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
        <% end %>
      </table>
      
        <%= link_to infomation_path(@user), class: "btn btn-success" do %>
          編集する
        <% end %>
        
        <%= link_to confirm_user_path(@user), class: "btn btn-danger" do %>
          削除する
        <% end %>
        
    </div>
  </div>
</div>