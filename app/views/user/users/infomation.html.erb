<div class="container">
  <div class="row">
    <div class="col-md-10">

    <h5><span style="background-color: #dcdcdc;">会員情報編集</span></h5>

    <%= form_for @user, url: user_path(@user), method: :patch do |f| %>

      <!-- エラーチェック -->
      <% if @user.errors.any? %>
        <%= @user.errors.count %> errors prohibited this obj from being saved:
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>

      <div class="field">
        <%= f.label :ニックネーム %>
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="row">
      <div class="actions">
        <%= f.submit "編集内容を保存" ,class: "btn btn-success" %>
      </div>
    <% end %>

    <%= link_to "退会する", confirm_user_path(current_user), class: "btn btn-danger" %>
    </div>

  </div>
</div>