<div class="container">
<h5><span style="background-color: #dcdcdc;">新規会員登録</span></h5>

  <div class="row">
    <div class="col-md-8">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "user/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :ニックネーム, class: "col-lg-4" %>
        <%= f.email_field :nickname, autofocus: true, class: "col-lg-3" %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス, class: "col-lg-4" %>
        <%= f.email_field :email, autofocus: true, class: "col-lg-3" %>
      </div>

      <div class="field">
        <%= f.label :"パスワード(6文字以上)", class: "col-lg-4" %>
        <%= f.password_field :password, autocomplete: "off", class: "col-lg-3" %>
      </div>

      <div class="field">
        <%= f.label :"パスワード(確認用)", class: "col-lg-4" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "col-lg-3" %>
      </div>

      <div class="text-center">
        <%= f.submit "新規登録" ,class: "btn btn-success" %>
      </div>
    <% end %>

    </div>
  </div>

  <div class="row">
    <div class="text-left">
      <div class="col-md-12">
        <h5><span style="background-color: #dcdcdc;">既に登録済みの方</span></h5>
        <span><%= render "user/shared/links" %>からログインしてください。</span>
      </div>
    </div>
  </div>

</div>
